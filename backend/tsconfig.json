{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"noEmit": true,

		"types": ["node"],

		"baseUrl": ".",
		"paths": {
			"@routes/*": ["src/routes/*"],
			"@utils/*": ["src/utils/*"],
			"@controllers/*": ["src/controllers/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@validators/*": ["src/validators/*"],
			"@models/*": ["models/*"],
			"@services/*": ["src/services/*"],
			"@errors/*": ["src/errors/*"]
		}
	},
	"include": ["src/**/*", "models/**/*", "*.ts", "*.js"]
}
