{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@validators/*": ["src/validators/*"],
      "@models/*": ["models/*"],
      "@services/*": ["src/services/*"],
      "@errors/*": ["src/errors/*"]
    }
  },
  "include": ["src/**/*", "index.js", "app.js"]
}
